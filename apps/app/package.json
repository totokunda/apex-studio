{
  "name": "Apex Studio",
  "description": "Apex Studio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "author": {
    "email": "totokunda@gmail.com",
    "name": "Totokunda"
  },
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "npm run build -ws --if-present",
    "compile": "npm run build && electron-builder build --config electron-builder.mjs",
    "test": "npx playwright test ./tests/e2e.spec.ts",
    "start": "node packages/dev-mode.js",
    "db:push": "npm rebuild better-sqlite3 && npx drizzle-kit push; npm run build --workspace @app/preload && npm run rebuild && npm run postinstall",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "typecheck": "npm run typecheck -ws --if-present"
  },
  "devDependencies": {
    "@npmcli/map-workspaces": "5.0.0",
    "@playwright/test": "1.55.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "24.5.2",
    "baseline-browser-mapping": "^2.8.32",
    "create-vite": "7.1.2",
    "drizzle-kit": "^0.31.7",
    "electron": "^38.1.2",
    "electron-builder": "26.0.12",
    "glob": "11.0.3",
    "playwright": "^1.55.0",
    "prettier": "^3.7.1",
    "react-refresh": "^0.18.0"
  },
  "dependencies": {
    "@app/main": "*",
    "@fontsource/lato": "^5.2.7",
    "@soundtouchjs/audio-worklet": "^0.2.1",
    "@tanstack/react-query": "^5.90.12",
    "drizzle-orm": "^0.44.7",
    "electron-store": "^11.0.2",
    "mime": "^4.1.0",
    "soundtouchjs": "^0.2.1",
    "ws": "^8.18.3"
  }
}
